@model List<BankBranch>
<h1>Bank Branchs List</h1>
<form method="get" action="@Url.Action("search","Bank")">
    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Search.." name="searchTerm" />
        <button class="btn btn-outline-secondary" type="sumbit">Search</button>
    </div>
</form>
<table class="table">
    <tr>
        <td>Branch Name</td>
        <td>Branch Location</td>
        <td>Branch Manager</td>
        <td>Bank ID</td>
        <td>Employee Count</td>
        
    </tr>

 

    @foreach (var bankBranch in Model)
    {
        <tr>
            <td><a href="/Bank/Details/@bankBranch.BankId">@bankBranch.LocationName</a></td>
            <td><a href="@bankBranch.LocationURL" target="_blank">Google Maps</a></td>
            <td>@bankBranch.BranchManager</td>
            <td>@bankBranch.BankId</td>
            <td>@bankBranch.EmployeeCount</td>
            <td>
                <a class="btn btn-info" href="Bank/Edit/@bankBranch.BankId">Edit Branch</a>
            </td>
            
        </tr>
    }

</table>

    <a class="btn btn-info" href="Bank/Create">Add Branch</a>
